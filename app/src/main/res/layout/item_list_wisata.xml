<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardWisata"
        app:cardCornerRadius="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgWisata"
                android:src="@drawable/wisata1"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txtNamaWisata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imgWisata"
                android:text="Nama tempat wisata"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLokasiWisata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi Wisata"
                android:layout_below="@id/txtNamaWisata"
                android:layout_toRightOf="@id/imgWisata"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="italic"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>